<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MechanicalCounterView">
        <attr name="goal" format="integer"/>
        <attr name="duration" format="integer"/>
        <attr name="size" format="dimension|reference"/>
        <attr name="counterColor" format="color|reference"/>
        <attr name="bold" format="boolean"/>
        <attr name="autoStart" format="boolean"/>
        <attr name="digitNumber" format="integer"/>
        <attr name="direction" format="enum">
            <enum name="alwaysUp" value="0"/>
            <enum name="alwaysDown" value="1"/>
            <enum name="moreUp" value="2"/>
            <enum name="moreDown" value="3"/>
        </attr>
        <attr name="mode" format="enum">
            <enum name="accelerate" value="0"/>
            <enum name="decelerate" value="1"/>
            <enum name="linear" value="2"/>
            <enum name="accelerateDecelerate" value="3"/>
        </attr>
        <attr name="modeFactor" format="float"/>
    </declare-styleable>
</resources>